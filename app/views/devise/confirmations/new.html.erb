<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
<h2>認証メールの再送信</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "認証メールの再送信", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>