<div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
  <table class="table table-hover">
    <thead>
      <h2>メッセージ一覧</h2>
    </thead>
    <% @conversations.each do |conversation| %>
      <% @users.each do |user| %>
        <% @followed.each do |followed| %>
          <% @followers.each do |followers| %>
            <% if user.id == followed.id && user.id == followers.id %>
              <tbody>
                <td>
                   <%= link_to followed.name, conversations_path(sender_id: current_user.id, recipient_id: followed.id), method: 'post'%>
                </td>
              </tbody>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </table>
</div>
